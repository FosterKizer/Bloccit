<%= form_for [post, post.comments.new] do |f| %>
	<div class="form-group">
		<p>_____________________________</p>
		<p>New Comment</p>
		<%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter comment here" %>
	</div>
	<div class="form-group">
		<%= f.submit "Save", class: 'btn btn-success' %>
	</div>
<% end %>
